<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design 3 底部导航栏样式 - 夜间模式 -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemPaddingTop">16dp</item>
        <item name="itemPaddingBottom">16dp</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigation.ActiveIndicator</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>
    <!-- Material Design 3 标签栏样式 - 夜间模式 -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <!-- 倒序和全部按钮样式 - 夜间模式 -->
    <style name="Widget.App.Button.SortAndAll" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_button_sort_all_m3</item>
        <item name="android:textColor">#D2D4D4</item>
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">12dp</item>
    </style>
    <!-- 详细错误信息弹窗按钮样式 - 夜间模式保持白色文本 -->
    <style name="Widget.App.Button.Dialog.ErrorDetail" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_FFFFFF</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>
</resources>
